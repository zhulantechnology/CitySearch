<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/menu_width"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_bg"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingTop="20dp"
    android:visibility="gone" >

   <LinearLayout
        android:id="@+id/menu_auto_refresh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginEnd="@dimen/menu_item_marginEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_auto_refresh"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/menu_auto_refresh"
            android:textSize="15dp" />
        <ImageView 
            android:id="@+id/menu_check_auto_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_checkbox_img"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_divider2" />
    <LinearLayout
        android:id="@+id/menu_auto_6h"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginEnd="@dimen/sub_menu_item_marginEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sub_menu_marginStart"
            android:text="@string/menu_auto_refresh_6h"
            android:textSize="15dp" />
        <ImageView 
            android:id="@+id/menu_check_auto_6h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_checkbox_img"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_divider2" />
    <LinearLayout
        android:id="@+id/menu_auto_12h"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginEnd="@dimen/sub_menu_item_marginEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sub_menu_marginStart"
            android:text="@string/menu_auto_refresh_12h"
            android:textSize="15dp" />
        <ImageView 
            android:id="@+id/menu_check_auto_12h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_checkbox_img"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_divider2" />
    <LinearLayout
        android:id="@+id/menu_auto_24h"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginEnd="@dimen/sub_menu_item_marginEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sub_menu_marginStart"
            android:text="@string/menu_auto_refresh_24h"
            android:textSize="15dp" />
        <ImageView 
            android:id="@+id/menu_check_auto_24h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_checkbox_img"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_divider2" />
    
     <LinearLayout
        android:id="@+id/menu_wifi_only"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:layout_marginEnd="@dimen/menu_item_marginEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_wifi_only"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/menu_wifi_only"
            android:textSize="15dp" />
        <ImageView 
            android:id="@+id/menu_check_wifi_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_checkbox_img"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_divider2" />
    
     <LinearLayout
        android:id="@+id/menu_set_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_set_city"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/city_manager"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
